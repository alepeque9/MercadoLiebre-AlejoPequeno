<%- include('../partials/head', {tituloWeb: 'MercadoLiebre - Login' }) %>
<body>
    <!-- HEADER -->
    <%- include("../partials/header")%>
    <!-- FIN HEADER -->
    <main class="registro-login-box">
        <div>
            <h2>Login</h2>
            <form action="/login" method="POST">

                <input type="text" id="usuario" name="usuario" placeholder="Usuario" required><br>
                <% if (locals.errors && errors.usuario) { %>
                    <p class="errors"><%= errors.usuario.msg %></p>
                <% } %>

                <input type="password" id="password" name="password" placeholder="ContraseÃ±a" required><br>

                <label>
                    <input type="checkbox" name="remember_user" value="on"> Recordar
                </label>
                <br>

                <input type="submit" value="Ingresar" class="boton"> <br>

            </form>
            <a class="back" href="/">
                <i class="fa-solid fa-backward"></i>
            </a>
        </div>
    </main>
    <!-- FOOTER -->
    <%- include("../partials/footer")%>
    <!-- FIN FOOTER -->
</body>

</html>